{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "All the basics for your next Express project.",
  "main": "server.js",
  "scripts": {
    "build": "npm run clean && babel -d ./build ./src -s",
    "start": "npm run build && nodemon ./src/server.js | bunyan",
    "clean": "rm -rf ./build && mkdir build",
    "heroku-postbuild": "npm install && npm run build",
    "test": "mocha | bunyan"
  },
  "author": "Phaedrus Raznikov",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "bcrypt": "^3.0.4",
    "body-parser": "^1.20.1",
    "bunyan": "^1.8.12",
    "connect-mongo": "^2.0.3",
    "cookie-parser": "^1.4.3",
    "ejs": "^2.6.1",
    "express": "^4.18.2",
    "express-session": "^1.15.6",
    "helmet": "^3.15.1",
    "module-alias": "^2.1.0",
    "mongoose": "^5.4.6",
    "mongoose-unique-validator": "^2.0.2",
    "nodemon": "^1.18.9",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "supertest": "^3.4.2",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "chai": "*",
    "mocha": "*",
    "standard": "^12.0.1"
  },
  "_moduleAliases": {
    "@root": "src",
    "@routes": "src/routes",
    "@models": "src/models",
    "@controllers": "src/controllers",
    "@test": "test"
  },
  "standard": {
    "ignore": [
      "test/"
    ]
  }
}
